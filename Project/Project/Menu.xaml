<Window x:Class="Project.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
     WindowStartupLocation="CenterScreen"
        Title="Menu" Height="450" Width="800" ResizeMode="NoResize">
    <Grid Background="#FF203566">
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" Height="60" Margin="30,261,0,0" VerticalAlignment="Top" Width="163" Click="Button3_Click" Background="#FF0064A0" BorderBrush="#FF005064"  FontFamily="Calibri Light" FontSize="20"/>
        <Label x:Name="loginlabel" Content="Log in pleace!" HorizontalAlignment="Left" Height="42" Margin="604,5,0,0" VerticalAlignment="Top" Width="154" RenderTransformOrigin="0.5,0.5" FontSize="22"/>
        <Label Content="Radio-Stations" HorizontalAlignment="Left" Height="37" Margin="68,10,0,0" VerticalAlignment="Top" Width="154" RenderTransformOrigin="0.5,0.5" FontSize="22"/>
        <Button x:Name="radio" Content="Radio1" HorizontalAlignment="Left" Height="60" Margin="30,65,0,0" VerticalAlignment="Top" Width="163" Click="Button_Click" Background="#FF272C9E" BorderBrush="White" FontFamily="Calibri Light" FontSize="20" BorderThickness="10"/>
        <Button x:Name="radio1" Content="Radio2" HorizontalAlignment="Left" Height="60" Margin="30,130,0,0" VerticalAlignment="Top" Width="163" Click="Button1_Click" Background="#FF3606D8" BorderBrush="#FF005064" FontFamily="Calibri Light" FontSize="20"/>
        <Button x:Name="radio2" Content="Radio3" HorizontalAlignment="Left" Height="60" Margin="30,196,0,0" VerticalAlignment="Top" Width="163" Click="Button2_Click" Background="#FF0064A0" BorderBrush="#FF005064"  FontFamily="Calibri Light" FontSize="20"/>
        <Button x:Name="radio3" Content="Radio4" HorizontalAlignment="Left" Height="60" Margin="30,261,0,0" VerticalAlignment="Top" Width="163" Click="Button3_Click" Background="#FF0064A0" BorderBrush="#FF005064"  FontFamily="Calibri Light" FontSize="20"/>
        <GroupBox x:Name="station" Header="Change radio-station"  FontFamily="Calibri Light" FontSize="15" HorizontalAlignment="Left" Height="256" Margin="198,52,0,0" VerticalAlignment="Top" Width="511" Visibility="Hidden">
            <ListView x:Name="rozklad" HorizontalAlignment="Left" Height="225" Margin="206,0,0,0" VerticalAlignment="Top" Width="284" Background="#00000000">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>