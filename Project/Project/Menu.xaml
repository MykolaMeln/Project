        <StackPanel x:Name="radiost" Panel.ZIndex="1" Height="0" Width="176" FlowDirection="RightToLeft" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF0064A0" Margin="6,6,0,0" Visibility="Hidden">
